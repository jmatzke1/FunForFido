<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.jason.funForFido.entity.UserRolesEntity" table="user_roles">
        <meta attribute="class-description">
            This class contains the user roles detail.
        </meta>
        <composite-id>
            <key-property name="username">
                <column name="username" sql-type="varchar(15)" length="30" />
            </key-property>
            <key-property name="rolename">
                <column name="rolename" sql-type="varchar(15)" length="30" />
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>
<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="com.jason.funForFido.entity.UserRolesEntity" table="users_roles"
           schema="funforfido">
        <composite-id mapped="true"
                      class="com.jason.funForFido.entity.UserRolesEntityPK">
            <key-property name="username">
                <column name="email_address" sql-type="varchar(30)"
                        length="30"/>
            </key-property>
            <key-property name="rolename">
                <column name="role" sql-type="varchar(30)" length="30"/>
            </key-property>
        </composite-id>
    </class>
</hibernate-mapping>